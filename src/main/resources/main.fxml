<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane fx:id="parentPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="stock.controller.MainController">
    <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="720.0"
                prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
          <MenuBar maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                   BorderPane.alignment="CENTER">
              <menus>
                  <Menu mnemonicParsing="false" text="Файл">
                      <items>
                          <MenuItem mnemonicParsing="false" text="Close"/>
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Настройки">
                      <items>
                          <MenuItem mnemonicParsing="false" onAction="#openStockList" text="Выбор акций"/>
                      </items>
                  </Menu>
              </menus>
          </MenuBar>
        </top>
        <bottom>
          <Label maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="25.0"
                 style="-fx-border-style: solid; -fx-border-color: #828282;" text="StatusBar"
                 BorderPane.alignment="CENTER">
              <padding>
                  <Insets left="5.0"/>
              </padding>
          </Label>
        </bottom>
        <left>
          <ListView id="mainSharesView" fx:id="mainSharesView" maxHeight="1.7976931348623157E308" prefHeight="670.0"
                    prefWidth="300.0" BorderPane.alignment="CENTER">
              <padding>
                  <Insets left="3.0"/>
              </padding>
          </ListView>
        </left>
    </BorderPane>
</AnchorPane>
